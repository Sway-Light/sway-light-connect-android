<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cold_warm_gradient_circle_view">
        <item name="android:layout_height">@dimen/color_circle_radius_times2</item>
        <item name="android:layout_width">@dimen/color_circle_radius_times2</item>
        <item name="android:startColor">@color/light_grad_default_start</item>
        <item name="android:endColor">@color/light_grad_default_end</item>
        <item name="android:centerColor">#FFFFFF</item>
        <item name="android:type">sweep</item>
        <item name="ringColor">#FFFFFF</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="isCheck">false</item>
        <item name="android:rotation">45</item>
    </style>

    <style name="tv_mode_selected">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/light_card_bg</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="tv_mode_unselected">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">@color/light_card_title_bg</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="tv_sway_light">
        <item name="fontFamily">@font/pt_sans_narrow</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#9f9f9f</item>
        <item name="textAllCaps">true</item>
        <item name="backgroundColor">@android:color/transparent</item>
    </style>

    <style name="bt_connected">
        <item name="android:alpha">1.0</item>
    </style>

    <style name="bt_disconnected">
        <item name="android:alpha">0.2</item>
    </style>

</resources>
