<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ColdWarmGradient">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:startColor">@color/warm</item>
        <item name="android:endColor">@color/cold</item>
        <item name="android:centerColor">#FFFFFF</item>
        <item name="ringColor">#FFFFFF</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="isCheck">false</item>
        <item name="android:rotation">45</item>
    </style>

    <style name="tv_mode_selected">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/card_bg</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="tv_mode_unselected">
        <item name="android:textColor">#616161</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">@android:color/transparent</item>
    </style>

</resources>
